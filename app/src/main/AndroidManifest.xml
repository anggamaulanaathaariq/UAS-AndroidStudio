<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.polinema.appmusic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/coverbts"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.WelcomeActivity"></activity>
        <activity android:name=".fragments.MusicFragment" />
        <activity android:name=".fragments.AlbumFragment" />
        <activity android:name=".fragments.HomeFragment" />
        <activity android:name=".fragments.BioFragment" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>